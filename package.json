{
  "name": "forgo-lazy",
  "version": "1.1.3",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "homepage": "https://github.com/jacob-ebey/forgo-lazy",
  "author": {
    "name": "Jacob Ebey",
    "email": "jacob.ebey@live.com"
  },
  "files": [
    "lib"
  ],
  "types": "./lib/types/index.d.ts",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "exports": {
    "import": "./lib/esm/index.js",
    "require": "./lib/cjs/index.js"
  },
  "scripts": {
    "build": "run-p build:*",
    "build:bundles": "node esbuild",
    "build:types": "tsc --emitDeclarationOnly",
    "dev": "jest --watch",
    "format": "prettier --write ./src",
    "test": "jest --coverage"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.11.9",
    "@types/jest": "26.0.20",
    "@types/node": "14.14.31",
    "cz-conventional-changelog": "3.3.0",
    "esbuild": "0.8.53",
    "esbuild-jest": "0.4.0",
    "glob": "7.1.6",
    "jest": "26.6.3",
    "linkedom": "^0.5.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.2.1",
    "typescript": "4.2.2"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/jest/setup.ts"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/lib/"
    ],
    "transform": {
      ".+\\.tsx?$": [
        "esbuild-jest",
        {
          "sourcemap": "external",
          "jsxFactory": "h",
          "jsxFragment": "Fragment"
        }
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "forgo": "0.0.73"
  }
}
